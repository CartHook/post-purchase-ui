{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "build/ts",
    "isolatedModules": true,
    "types": [
      "node",
      "@types/css-font-loading-module"
    ],
    "composite": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2018",
      "esnext.asynciterable",
      "scripthost",
      "WebWorker",
      "WebWorker.ImportScripts"
    ],
    "module": "commonjs",
    "target": "es2017",
    "pretty": true
  },
  "include": ["src", "./config/typescript/**.d.ts"]
}
